<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_img_hor" >

        <ImageView
            android:id="@+id/iv_back_camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/back_arrow"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_magic_camera_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@drawable/magic_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_rotate_camera_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/rotate_icon"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_next_camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/next_arrow"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:background="@color/black"
        android:id="@+id/iv_captured_camera_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/layout_footer_camera_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_img_hor"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageView
            android:id="@+id/iv_brightness_camera_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/brightness_icon" />

        <ImageView
            android:id="@+id/iv_saturation_camera_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/saturation_icon" />

        <ImageView
            android:id="@+id/iv_contrast_camera_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/contrast_icon" />

        <ImageView
            android:id="@+id/iv_sharpning_camera_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/sharpening_icon" />

        <ImageView
            android:id="@+id/iv_vignetting_camera_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/vignetting_icon" />
    </LinearLayout>

    <LinearLayout
        
        android:id="@+id/layout_seekbaar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_img_hor"
        android:gravity="center"
        android:orientation="vertical" >

        <SeekBar
            android:id="@+id/seekbar_camera_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:max="100" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_cancel_camera_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/cross_icon_small" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textCapCharacters"
                android:text=""
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/iv_right_camera_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@drawable/right_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>